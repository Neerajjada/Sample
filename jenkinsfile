pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'https://github.com/asquarezone/spring-petclinic.git'
                // this is to test the commit over the commit to test and delete a branch
            }
        }
        stage('compile') {
            steps {
                // compile using maven
                bat '''mvn compile
'''
            }
        }
        stage('package') {
            steps {
                // echo 'package'
                bat '''mvn clean package -DskipTests'''
code changes to be implimented
            }
        }
        stage('archiove') {
            steps {
                // echo 'Artifact'
                archiveArtifacts artifacts: 'target/*.jar', followSymlinks: false
            }
        }
    }
}
